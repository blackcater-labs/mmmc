{
  "name": "mmmc",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Mmmc is an open-source software for organizing your comics.",
  "author": {
    "name": "blackcater <Elon Tang>",
    "email": "i@blackcater.dev",
    "url": "https://www.blackcater.com"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "nextjs",
    "nestjs"
  ],
  "main": "index.js",
  "scripts": {
    "dev:web": "pnpm run --filter web dev",
    "dev:server": "pnpm run --filter server dev",
    "dev:docs": "pnpm run --filter docs dev",
    "build": "turbo build",
    "build:web": "pnpm run --filter web build",
    "build:server": "pnpm run --filter server build",
    "build:docs": "pnpm run --filter docs build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "taze": "taze minor -r",
    "taze:major": "taze major -r"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.6",
    "@eslint/eslintrc": "^2.1.4",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.1",
    "@vitest/coverage-istanbul": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-format": "^0.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "esno": "^4.0.0",
    "prettier": "^3.1.1",
    "taze": "^0.13.0",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
