{
  "compilerOptions": {
    "target": "ES2018",
    "jsx": "preserve",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {},
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["**/node_modules/**"]
}
