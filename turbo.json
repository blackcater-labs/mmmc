{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "dependsOn": ["clean"],
      "cache": false
    },
    "build": {
      "inputs": ["src/**"],
      "dependsOn": ["clean", "^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "cache": true
    },
    "test": {
      "inputs": ["src/**", "test/**"],
      "dependsOn": ["build"],
      "outputs": ["coverage/**", "coverage-report/**"],
      "cache": true
    },
    "clean": {
      "cache": false
    }
  }
}
